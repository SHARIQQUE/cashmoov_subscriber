<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".activity.setting.Confidentiality">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_about" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confidentiality"
            android:textAlignment="center"
            android:textColor="@color/textColorDBlack"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/aileron_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_requires_biometric_auth"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/textColorDBlack"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aileron_semibold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/protection_of_sensitive"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/textColorDBlack"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aileron_semibold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/activate_ptotection"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/aileron_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:gravity="end">

                    <com.suke.widget.SwitchButton
                        android:id="@+id/btnSwich"
                        android:layout_width="wrap_content"
                        app:sb_checked="true"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/press_cancel_return_to_dashboard"
            android:textAlignment="center"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/textColorDBlack"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aileron_semibold"/>



        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/btn_blue"
            android:text="@string/cancel"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>