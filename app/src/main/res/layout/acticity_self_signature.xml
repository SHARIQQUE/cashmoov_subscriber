<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/bg_home"
    tools:context=".activity.register.SelfSignature">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="top"
            android:fontFamily="@font/aileron_bold"
            android:lineSpacingExtra="7sp"
            android:text="@string/self_sign"
            android:textColor="@color/textColorDBlack"
            android:textSize="@dimen/_20sdp"/>

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#E4E7F5"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/signaturePad_electricityBill"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:layout_gravity="center"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:fontFamily="@font/aileron_bold"
            android:gravity="center"
            android:text="@string/clear"
            android:textSize="@dimen/_13sdp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="3sp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:layout_gravity="center"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:fontFamily="@font/aileron_bold"
            android:gravity="center"
            android:text="@string/save_next"
            android:textSize="@dimen/_13sdp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="3sp"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>