<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_20sdp">
            <!--android:descendantFocusability="blocksDescendants"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/aileron_bold"
                    android:textColor="#29304d"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/verification"
                    />

                <TextView
                    android:id="@+id/tvPhoneNoMsg"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#323232"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/verification_reset_pin_message"
                    />

            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:inputType="number"
                android:layout_gravity="center"
                android:itemBackground="@drawable/bg_otp_item"
                android:textColor="@color/colorPrimary"
                app:OtpCursorColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                app:OtpHideLineWhenFilled="true"
                app:OtpItemCount="6"
                app:OtpItemSpacing="@dimen/_4sdp"
                app:OtpLineColor="@color/otp_item_state"
                app:OtpState_filled="true"
                app:OtpViewType="line"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/aileron_black"/>


            <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#323232"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/aileron_regular"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/session_expired_send_back"
                    />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textSize="15sp"-->
<!--                    android:textColor="#323232"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:fontFamily="@font/aileron_regular"-->
<!--                    android:lineSpacingExtra="10sp"-->
<!--                    android:text="Vous n'avez pas reÃ§u de code? Renvoyer le"-->
<!--                    />-->

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/btn_blue"
                    android:fontFamily="@font/aileron_bold"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:text="@string/continu"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>



</RelativeLayout>
