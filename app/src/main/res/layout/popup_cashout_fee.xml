<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/check"
            android:backgroundTint="@color/colorPrimaryDark" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/fee_consulting_service"
            android:textAlignment="center"
            android:fontFamily="@font/aileron_semibold"
            android:gravity="center_horizontal"
            android:textColor="@color/textColorDBlack"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/service_chosen_colon"
            android:textSize="@dimen/_14sdp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/aileron_semibold"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cashout"
            android:textColor="@color/green_700"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/aileron_bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_25sdp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCashOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:weightSum="2"
                android:background="@color/white"
                android:layout_marginStart="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        android:layout_margin="@dimen/_2sdp">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_cashout" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/textColorDBlack"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/aileron_bold"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="@string/cashout"
                        android:layout_gravity="start|center_vertical"/>
                    <!--                <View-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="0.5dp"-->
                    <!--                    android:background="@color/view_color"-->
                    <!--                    android:layout_marginTop="@dimen/_10sdp"-->
                    <!--                    android:layout_marginBottom="10sp"/>-->

                    <!--                <TextView-->
                    <!--                    android:id="@+id/tvAmount"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:paddingBottom="@dimen/_10sdp"-->
                    <!--                    android:textColor="@color/textColorDBlack"-->
                    <!--                    android:textSize="@dimen/_16sdp"-->
                    <!--                    android:fontFamily="@font/aileron_bold"-->
                    <!--                    android:paddingStart="@dimen/_10sdp"-->
                    <!--                    android:paddingEnd="@dimen/_10sdp"-->
                    <!--                    android:gravity="start|center_vertical" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/arrow_right_menu"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_blue"
                android:text="@string/close"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>