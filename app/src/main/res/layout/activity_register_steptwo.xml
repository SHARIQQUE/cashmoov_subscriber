<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_home"
    tools:context=".activity.register.RegisterStepTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:id="@+id/tvSkip"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="@dimen/_16sdp"-->
<!--            android:textColor="@color/blue"-->
<!--            android:fontFamily="@font/aileron_bold"-->
<!--            android:lineSpacingExtra="7sp"-->
<!--            android:textAlignment="textEnd"-->
<!--            android:text="@string/skip"-->
<!--            android:drawablePadding="@dimen/_5sdp"-->
<!--            android:drawableEnd="@drawable/ic_autre"-->
<!--            android:layout_gravity="end"-->
<!--            android:layout_marginBottom="@dimen/_10sdp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/attach"
                    android:padding="@dimen/_15sdp"
                    android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/aileron_bold"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/attach_your_id"
                        android:textColor="@color/textColorDBlack"
                        android:textSize="@dimen/_20sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/textColorLBlack"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/aileron_semibold"
                        android:lineSpacingExtra="8sp"
                        android:textAlignment="center"
                        android:text="@string/attach_id_message"
                        android:gravity="center_horizontal" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnFront"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/btn_blue"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        app:srcCompat="@drawable/ic_baseline_photo_bl" />

                    <EditText
                        android:id="@+id/etFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_edittextname"
                        android:backgroundTint="@color/bgColorHint"
                        android:hint="@string/front"
                        android:inputType="textEmailAddress"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:enabled="false"
                        android:paddingBottom="@dimen/_12sdp"
                        android:textColor="@color/textColorLBlack"
                        android:textSize="@dimen/_13sdp" />

                    <Button
                        android:id="@+id/btnFrontUpload"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/upload"
                        android:clickable="true"
                        android:textSize="@dimen/_11sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_jaune" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/btn_blue"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        app:srcCompat="@drawable/ic_baseline_photo_bl" />

                    <EditText
                        android:id="@+id/etBack"
                        android:hint="@string/ex_verso"
                        android:layout_weight="1"
                        android:background="@drawable/btn_edittextname"
                        android:backgroundTint="@color/bgColorHint"
                        android:inputType="textEmailAddress"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/textColorLBlack"
                        android:textSize="@dimen/_13sdp"
                        android:layout_width="wrap_content"
                        android:enabled="false"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnBackUpload"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/upload"
                        android:clickable="true"
                        android:textSize="@dimen/_11sdp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_jaune" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_edittextname"
                    android:backgroundTint="@color/bgColorHint"
                    android:lineSpacingExtra="10sp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/textColorLBlack">
                    <TextView
                        android:id="@+id/spIdProof"
                        android:padding="@dimen/_5sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:text="@string/valid_select_id_proof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorLBlack"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etProofNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_edittextname"
                    android:backgroundTint="@color/bgColorHint"
                    android:inputType="text"
                    android:lineSpacingExtra="10sp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:hint="@string/vaild_id_proof_no"
                    android:textColor="@color/textColorLBlack"
                    android:textSize="@dimen/_13sdp" />


                <TextView
                    android:id="@+id/tvNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:fontFamily="@font/aileron_bold"
                    android:gravity="center"
                    android:text="@string/next" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

